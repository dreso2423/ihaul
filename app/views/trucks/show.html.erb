<div class="container">
  <h1><%= @truck.name %></h1>
  <%= link_to "Back to all trucks", root_path %>
  <br>



  <h3>Reviews</h3>
  <% if @truck.reviews.empty? %>
    <p>Be the first to let a review</p>
  <% else %>
    <ul class="list-group">
      <% @truck.reviews.each do |review| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span class="badge badge-primary badge-pill">
            <% counter = 0 %>
            <% 5.times do %>
              <i class="fa <%= review.rating > counter ? 'fa-star' : 'fa-star-o' %>"></i>
              <% counter += 1 %>
            <% end %>
          </span>
          <%= review.description %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <%= render "reviews/new", truck: @truck, review: @review %>

</div>

