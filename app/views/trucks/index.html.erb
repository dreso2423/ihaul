<section id="boat_services" class="my-5">
  <div class="container">
    <div class="title mb-1">
      <h2>Please see from our selection of trucks around the world</h2>
      <p>Browse a new selection of trucks verified for quality & speed</p>
    </div>
    <% @trucks.each do |truck| %>
    <div class="row">
      <div class="col-md-4">
        <figure>
      <img src="https://images.pexels.com/photos/5025669/pexels-photo-5025669.jpeg" class="mb-2"alt="">
      <figcaption class="inside">
        <h2 class="text-white"><%= truck.name  %></span></h2>
      </figcaption>
      <figcaption class="outside">
        <p class="small text-color mb-0">150+ VERIFIED TRUCKS in Mexico</p>
        <p class="text-desc">Awesome truck that is secure and can carry 1.5 tons</p>
      </figcaption>
    </figure>
      </div>
    </div>
    <% end %>
  </div>
</section>


