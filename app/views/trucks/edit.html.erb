<h1>Edit your truck#edit</h1>
<p>Find me in app/views/trucks/edit.html.erb</p>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
    <h2>Please put in the information of your vehicle</h2>
    <%= simple_form_for @truck do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :size %>
      <%= f.input :price %>
      <%= f.input :model %>
      <%= f.input :make %>
      <%= f.input :color %>
      <%= f.button :submit, class: 'btn btn-primary' %>
    <% end %>
    </div>
  </div>
</div>



